<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/icon_background"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_icon_rounded_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/icono_de_visita" />

        <ImageView
            android:id="@+id/icon_clock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_access_time"
            app:layout_constraintBottom_toBottomOf="@id/icon_background"
            app:layout_constraintEnd_toEndOf="@id/icon_background"
            app:layout_constraintStart_toStartOf="@id/icon_background"
            app:layout_constraintTop_toTopOf="@id/icon_background"
            app:tint="@color/text_secondary" />

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/icon_background"
            app:layout_constraintTop_toTopOf="@id/icon_background"
            app:layout_constraintBottom_toBottomOf="@id/icon_background"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/text_nombre_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Hospital San Lucas" />

            <TextView
                android:id="@+id/text_direccion_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Calle Principal 123" />

            <TextView
                android:id="@+id/text_hora_visita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="10:00 AM" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/text_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_pendiente"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="PENDIENTE"
            tools:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>