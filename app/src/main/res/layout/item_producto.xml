<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Variables de data binding si son necesarias -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical">

        <!-- Imagen del producto -->
        <androidx.cardview.widget.CardView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/md_theme_light_surface">

            <ImageView
                android:id="@+id/imagen_producto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/imagen_producto_description"
                android:padding="12dp"
                android:scaleType="centerInside"
                tools:src="@drawable/ic_hospital_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- InformaciÃ³n del producto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#1A1A1A"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="Producto" />

            <TextView
                android:id="@+id/stock_producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/md_theme_light_primary"
                android:textSize="15sp"
                tools:text="100 disponibles" />

        </LinearLayout>

    </LinearLayout>

</layout>

